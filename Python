def calculate_mch(hemoglobin, red_blood_cells):
    """
    Calculate Mean Corpuscular Hemoglobin (MCH).

    Arguments:
    hemoglobin -- The amount of hemoglobin in grams (float).
    red_blood_cells -- The number of red blood cells in millions (float).

    Returns:
    mch -- The calculated Mean Corpuscular Hemoglobin (float).
    """

    mch = (hemoglobin / red_blood_cells) * 10

    return mch

# Example usage
hemoglobin_level = 15.2
red_blood_cell_count = 4.9

mch_result = calculate_mch(hemoglobin_level, red_blood_cell_count)
print("Mean Corpuscular Hemoglobin (MCH):", mch_result)
